<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apoyo Virtual"
            android:textSize="28sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp" />

        <!-- Fila 1: Detector y Quiénes Somos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Detector de Estado de Ánimo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ojo"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Detector de Estado de Ánimo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detector de Estado de Ánimo"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/detectorButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- Quiénes Somos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/signo"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Quiénes Somos"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Quiénes Somos?"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/somosButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Fila 2: Hábitos Saludables y No Saludables -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Hábitos Saludables -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/corazones"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Hábitos Saludables"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hábitos Saludables"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/saludablesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- Hábitos No Saludables -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/triste"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Hábitos No Saludables"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hábitos No Saludables"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/nosaludablesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Fila 3: Referencias y Enviar Mensaje -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Referencias -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/lupa"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Referencias"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Referencias"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/referenciasButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

            <!-- Enviar Mensaje -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/fotooo"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Enviar Mensaje"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar Mensaje"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/mensajeButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Fila 4: Calendario y Emociones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Calendario -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/calendarioImageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="Icono Calendario"
                    android:layout_marginBottom="8dp"
                    android:scaleType="fitCenter"
                    android:src="@android:drawable/ic_menu_my_calendar" />

                <TextView
                    android:id="@+id/calendarioTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:text="Calendario"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/calendarioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#6A0DAD"
                    android:paddingVertical="4dp"
                    android:text="Entrar"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Gestionar Emociones -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/corazones"
                    android:scaleType="fitCenter"
                    android:contentDescription="Icono Gestionar Emociones"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gestionar Emociones"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/emocionesButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrar"
                    android:textSize="12sp"
                    android:backgroundTint="#6A0DAD"
                    android:textColor="@android:color/white"
                    android:paddingVertical="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
