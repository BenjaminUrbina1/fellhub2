<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Pregunta por el nombre -->
    <TextView
        android:id="@+id/tvPreguntaNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu nombre?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- Campo para ingresar el nombre -->
    <EditText
        android:id="@+id/etNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu nombre aquí"
        android:inputType="textPersonName"
        android:layout_marginBottom="24dp"/>

    <!-- Petición de mensaje -->
    <TextView
        android:id="@+id/tvPreguntaMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Envíanos un mensaje"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- Campo para el mensaje -->
    <EditText
        android:id="@+id/etMensaje"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Escribe tu mensaje aquí"
        android:inputType="textMultiLine"
        android:gravity="start"
        android:layout_marginBottom="24dp"/>

    <!-- Pregunta sobre si le gustó la app -->
    <TextView
        android:id="@+id/tvPreguntaGusto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Te gustó la aplicación?"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <!-- RadioGroup para la selección de gusto -->
    <RadioGroup
        android:id="@+id/rgGustoApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/rbSi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sí"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/rbNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No"
            android:textSize="16sp"/>

    </RadioGroup>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Botón para enviar -->
        <Button
            android:id="@+id/btnEnviar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enviar mensaje"
            android:backgroundTint="#6A0DAD"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Botón para regresar -->
        <Button
            android:id="@+id/btnRegresarmensaje"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar"
            android:backgroundTint="#6A0DAD"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imagenFormulario"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/fotooo"
        android:scaleType="fitCenter"
        android:contentDescription="Imagen decorativa del formulario"
        android:layout_gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>