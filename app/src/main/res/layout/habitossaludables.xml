<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <!-- Título principal -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡4 hábitos para mejorar nuestra salud mental!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#6A1B9A"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <!-- Hábito 1 -->
    <TextView
        android:id="@+id/tvHabito1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1- No seas sedentario, ¡realiza actividad física! :)"
        android:textSize="16sp"
        android:background="#E1BEE7"
        android:textColor="#4A148C"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"/>

    <!-- Hábito 2 -->
    <TextView
        android:id="@+id/tvHabito2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2- Trata de dormir 8 horas, ¡no te quedes viendo celular hasta tan tarde! >:("
        android:textSize="16sp"
        android:background="#D1C4E9"
        android:textColor="#4A148C"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"/>

    <!-- Hábito 3 -->
    <TextView
        android:id="@+id/tvHabito3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3- Come saludable, minimiza el consumo de comida chatarra"
        android:textSize="16sp"
        android:background="#C5CAE9"
        android:textColor="#4A148C"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="4dp"/>

    <!-- Hábito 4 -->
    <TextView
        android:id="@+id/tvHabito4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4- Si crees que necesitas ayuda, visita un profesional de la salud mental"
        android:textSize="16sp"
        android:background="#BBDEFB"
        android:textColor="#4A148C"
        android:padding="16dp"
        android:layout_marginBottom="32dp"
        android:elevation="4dp"/>

    <!-- Invitación a compartir -->
    <TextView
        android:id="@+id/tvInvitacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Tienes otro hábito saludable? Compártelo con nosotros :)"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Campo para compartir hábito -->
    <EditText
        android:id="@+id/etHabito"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Escribe tu hábito saludable aquí..."
        android:inputType="textMultiLine"
        android:gravity="start"
        android:background="@android:drawable/editbox_background"
        android:layout_marginBottom="24dp"/>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Botón enviar -->
        <Button
            android:id="@+id/btnEnviarHabito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enviar hábito"
            android:backgroundTint="#7B1FA2"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="8dp"/>

        <!-- Botón regresar -->
        <Button
            android:id="@+id/btnRegresarsaludables"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Regresar"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</LinearLayout>