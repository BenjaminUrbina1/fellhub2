<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ojo"
    android:padding="16dp">

    <!-- Bloque blanco para el texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"> <!-- Opcional: añade una sombra sutil -->

        <TextView
            android:id="@+id/tvQuienesSomosTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Somos un equipo con ganas de mejorar la calidad de vida de las personas, es por ello que decidimos presentar este proyecto. Nuestro trabajo consiste en una aplicación capaz de detectar las emociones de las personas. Este sistema ocupa tecnología de punta, la cual mediante un pequeño objeto, podremos analizar la mente humana. Nosotros somos Dafne Poblete y Benjamín Urbina, ¿te gusta nuestra idea?"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingMultiplier="1.2"/>
        <!-- android:justificationMode="inter_word" si API >= 26 para texto justificado -->

    </LinearLayout>

    <Button
        android:id="@+id/btnRegresarquienessomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#9E9E9E"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Regresar"
        android:textColor="#FFFFFF" />

</RelativeLayout>
